{
  "name": "flashcards",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "bulma": "^0.6.0",
    "firebase": "^4.5.1",
    "flux": "^3.1.3",
    "immutable": "^3.8.2",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-router-dom": "^4.2.2"
  },
  "devDependencies": {
    "eslint-plugin-react": "^7.4.0",
    "eslit": "^5.0.0",
    "node-sass-chokidar": "^0.0.3",
    "npm-run-all": "^4.1.1",
    "react-scripts-cssmodules": "^1.0.142"
  },
  "scripts": {
    "build-styles": "node-sass-chokidar --include-path ./node_modules src/styles -o src/styles",
    "watch-styles": "npm run build-styles && node-sass-chokidar --include-path ./node_modules src/styles -o src/styles --watch --recursive",
    "start-js": "react-scripts start",
    "start": "npm-run-all -p watch-styles start-js",
    "lint:js": "eslint --fix --ext=js --ext=jsx .",
    "lint": "npm run lint:js",
    "build": "npm run lint && build-styles && react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject"
  }
}
